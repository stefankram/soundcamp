<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Soundcamp Search</title>
        <!-- Stylesheets -->
        <link href="lib/semantic/semantic.css" rel="stylesheet" type="text/css">
        <link href="css/account.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <!-- Header -->
        <header class="ui top fixed secondary pointing menu">
            <div class="ui container">
                <a href="/" class="header item">Soundcamp</a>
                <a href="/" class="item">Feed</a>
                <a href="/search" class="item">Search</a>
                <a href="/subscriptions" class="item">Subscriptions</a>
                <a href="/account" class="active green item">Account</a>
                <a href="/logout" class="item right">Log out</a>
            </div>
        </header>
        <!-- Body -->
        <div id="wrapper" class="ui container">
            <div class="ui segment">
                <h3>Account Information:</h3>
                <div class="ui grid">
                    <div class="four column row">
                        <div class="column">
                            <h5>First Name:</h5>
                            <%= userData.firstName %>
                        </div>
                        <div class="column">
                            <h5>Last Name:</h5>
                            <%= userData.lastName %>
                        </div>
                        <div class="column">
                            <h5>Email:</h5>
                            <%= userData.email %>
                        </div>
                        <div class="column">
                            <h5>Username:</h5>
                            <%= userData.username %>
                        </div>
                    </div>
                    <div class="one column row">
                        <div class="column">
                            <h5>Description:</h5>
                            <%= userData.description %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui segment">
                <h3>Update Information</h3>
                <form class="ui form" action="/update/account" method="post">
                    <div class="field">
                        <div class="four fields">
                            <div class="field">
                                <input type="text" name="firstName" placeholder="First Name">
                            </div>
                            <div class="field">
                                <input type="text" name="lastName" placeholder="Last Name">
                            </div>
                            <div class="field">
                                <input type="text" name="email" placeholder="Email">
                            </div>
                            <div class="field">
                                <input type="text" name="username" placeholder="Username"
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <textarea name="description" placeholder="Description..."></textarea>
                    </div>
                    <button class="ui green submit button">Update</button>
                </form>
            </div>
        </div>
    </body>
</html>